---
  import BookItem from '../components/BookItem.astro'
  import { books } from '../data/books'
  
---

<ul class="grid grid-cols-2 md:grid-cols-3 gap-3 px-4">
  {
    books.map((book) => (
      <li>
        <BookItem
          id={book.id}
          title={book.title}
          img={book.img}
          />
      </li>
    ))
  }
</ul>